{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/Character.js", "components/CharacterCard.js", "components/Footer.js", "components/Header.js", "components/Navbar.js", "components/NavbarLink.js", "components/SocialLink.js", "components/SocialLinks.js", "pages/_app.tsx", "pages/_document.tsx", "pages/index.tsx"],
  "exclude": ["node_modules"]
}
